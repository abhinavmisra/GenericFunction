package com.function.generic;

import java.io.BufferedReader;
import java.io.File;
import java.io.FileReader;
import java.io.IOException;
import java.util.Scanner;

public class PrimeProbability {
	
	static String[] dataArray;
	
	public static String readFile(String pathname) throws IOException {
	    File file = new File(pathname);
	    StringBuilder fileContents = new StringBuilder((int) file.length());
	    Scanner scanner = new Scanner(new BufferedReader(new FileReader(file)));
	    String lineSeparator = System.getProperty("line.separator");

	    try {
	        if (scanner.hasNextLine()) {
	            fileContents.append(scanner.nextLine());
	        }
	        while (scanner.hasNextLine()) {
	            fileContents.append(lineSeparator + scanner.nextLine());
	        }
	        return fileContents.toString();
	    } finally {
	        scanner.close();
	    }
	}

	
	static boolean isPrime(long n) {
		  int perfect_modulo = 0;
		  boolean prime = false;

		  for ( int i = 1; i <=  n; i++ ) {
		    if ( n % i == 0 ) {
		      perfect_modulo += 1;
		    }
		  }
		  if ( perfect_modulo == 2 ) {
		    prime = true;
		  }

		  return prime;
		}
	
/*	public static int MethodPrimeProbabilty() {
		int probability=0;
		return probability;
	}*/

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.out.println(PrimeProbability.isPrime(138955));
		try {
			String data = PrimeProbability.readFile("C:\\Users\\Abhinav_Mishra\\Downloads\\input.txt");
			dataArray = data.split(",");
			System.out.println("Print dataArray length"+dataArray.length);
			//System.out.println(data);
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}

}
